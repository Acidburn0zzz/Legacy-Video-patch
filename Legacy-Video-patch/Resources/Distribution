    my.result.title = 'Failure';
    my.result.message = 'This programm works for macOS Catalina 10.15.1 and above. Use on macOS Catalina 10.15 xxx and install only on macOS Catalina 10.15';
    my.result.type = 'Fatal';
    return false;
  }
  return true;
}
